#player-timeline
  position relative
  flex 1
  cursor pointer
  display block
  background rgba(200,200,200,0.5)
  width 100%
  height 5px
  margin 0 5px
  border-radius 99em

  .bar
    position absolute
    height inherit
    background $accentColor
    border-radius 99em

  .bar--animated
    transition width 500ms

  .bar--buffered
    background rgba(200,200,200,1)

  .bar--elapsed { }
