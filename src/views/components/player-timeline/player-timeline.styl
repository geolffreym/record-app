#player-timeline
  absolute bottom 0 right left
  z-index 10002
  cursor pointer
  display block
  background rgba(200,200,200,0.5)
  width 100%
  height 5px

  .bar
    position absolute
    height inherit
    background $accentColor

  .bar--animated
    transition width 500ms

  .bar--buffered
    background rgba(150,150,150,0.5)

  .bar--elapsed { }
