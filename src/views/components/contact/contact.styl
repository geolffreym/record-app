.contact
  padding 0
  &:not(.contact__profile)
    cursor pointer
  + .contact
    margin-top -1px

.contact__avatar
  absolute top left

.contact__title
  display block

.contact__action
  absolute top 5px right 5px
  .button
    padding 10px
    background #f5f5f5
    display block

.contact__menu
  margin-bottom -1px
  a
    padding 15px
    margin-top 4px
    display inline-block
    + a
      margin-left 4px
    &:hover
      background #f0f0f0
      color #444
    &.active
      background $backgroundColor
      border-top 2px solid $accentColor
      border-left 1px solid $borderColor
      border-right 1px solid $borderColor

.contact.contact__profile
  .contact__body
    display inline-block
    min-height 120px
    margin-left 115px
  .contact__bio
    margin 5px 0px
  .contact__title
    font-weight 300
    line-height 1.1
    font-size 38px

.contact__heading.contact
  margin-left -45px
  background $backgroundColor
  &:not(:first-child)
    border-top 1px solid $borderColor
    padding-top 15px
    margin-top 45px
    .contact__avatar
      top 15px
  .contact__avatar
    background white
    width 35px
    height 35px
    border-radius 999em
    border 1px solid $borderColor
  .contact__body
    margin-left 45px
    min-height 45px

.contact__item.contact
  border 1px solid $borderColor
  border-radius $borderRadius
  &:hover
    background #fbfbfb
  .contact__avatar
    width 45px
    height 45px
    padding 5px
    background #f9f9f9
  .contact__body
    display flex
    flex-direction column
    justify-content center
    margin-left 55px
    min-height 45px
